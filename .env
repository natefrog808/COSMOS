# COSMOS Automation Agent Environment Variables

# API Keys
ANTHROPIC_API_KEY=sk-ant-api03-YOUR-KEY-HERE

# Agent Configuration
COSMOS_WORKSPACE_NAME="My Automation Workspace"
COSMOS_LOG_LEVEL=info  # debug, info, warn, error

# System Settings
COSMOS_SAFE_MODE=true  # Enable/disable safety features
COSMOS_NOTIFICATIONS_ENABLED=true  # Enable/disable system notifications
COSMOS_MOUSE_SPEED=medium  # slow, medium, fast

# Optional: OCR Configuration
COSMOS_OCR_LANGUAGES=eng  # Comma-separated list of language codes

# Optional: Paths
COSMOS_SCREENSHOTS_DIR=./screenshots
COSMOS_PATTERNS_DIR=./patterns

# Optional: Advanced Settings
COSMOS_MAX_RETRY_ATTEMPTS=3
COSMOS_REQUEST_TIMEOUT=60000
